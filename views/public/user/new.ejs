<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <form id='signup-form' action="/public/user/create" method="post" accept-charset="utf-8" class="form" role="form">
        <legend>Sign Up</legend>
        <h4>It's free and always will be.</h4>
        <% if(flash && flash.err) { %>
        <ul class="alert alert-success">
          <% Object.keys(flash.err).forEach(function(error) { %>
          <li><%- JSON.stringify(flash.err[error].message) %></li>
          <% }) %>
        </ul>
        <% } %>
        <input type="text" name="username" class="form-control input-lg" placeholder="User Name"/>
        <input type="email" name="email" class="form-control input-lg" placeholder="Your Email"/>
        <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password"/>
        <input type="password" name="confirm_password" class="form-control input-lg" placeholder="Confirm Password"/>
        <input type='hidden' name='_csrf' value='<%= _csrf %>'>
        <br/>
        <button class="btn btn-lg btn-primary btn-block signup-btn" type="submit">
          Create my account
        </button>
      </form>
    </div>
  </div>
</div>
