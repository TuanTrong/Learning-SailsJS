<table class="table table-list table-hover table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Id</th>
    <th>User Name</th>
    <th>Email Name</th>
    <th></th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  </thead>
  <tfoot>
  <tr>
    <td colspan="100%">
      <a href="/public/user/gen" class="btn btn-success pull-right">Generate Test Data</a>
    </td>
  </tr>
  </tfoot>
  <tbody>
  <% users.forEach(function(user){ %>
  <tr>
    <td class="center-content">
      <% if(user.online){ %>
      <i class="fa fa-2x fa-smile-o"></i>
      <% }else{ %>
      <i class="fa fa-2x fa-frown-o"></i>
      <% } %>
    </td>
    <td><%= user.id %></td>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td class="center-content">
      <% if(user.admin){ %>
      <i class="fa fa-2x fa-user-secret"></i>
      <% }else{ %>
      <i class="fa fa-2x fa-user"></i>
      <% } %>
    </td>
    <td><a href="/public/user/show/<%= user.id %>" class="btn btn-primary">Show</a></td>
    <td><a href="/public/user/edit/<%= user.id %>" class="btn btn-warning">Edit</a></td>
    <td>
      <a href="/public/user/destroy/<%= user.id %>" class="btn btn-danger"
         onclick="return confirm('Bạn có muốn xóa không?');">Delete</a>
    </td>
  </tr>
  <% }) %>
  </tbody>
</table>

